@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Author>;

<h1>Authors</h1>
<br>
@if (@Model.Count == 0)
{
  <h3>No authors have been added yet!</h3>
} 

@foreach (Author author in Model)
{
  <h3>@Html.ActionLink($"{author.Name}", "Details", new { id = author.AuthorId })</h3>
}
<br>
<h4>@Html.ActionLink("Add new author", "Create")</h4>
<h4>@Html.ActionLink("Delete All Authors", "DeleteAll")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>