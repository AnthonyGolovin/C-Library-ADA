@{
  Layout = "_Layout";
}
@using System.Security.Claims
<h1>Welcome to Seattle's New Online library!</h1>
<br>

@if (User.Identity.IsAuthenticated)
{

  <h3>@Html.ActionLink("See all authors", "Index", "Authors")</h3>
  <h3>@Html.ActionLink("See all books", "Index", "Books")</h3>
}
else
{
  <h3>@Html.ActionLink("Create an account", "Index", "Account")</h3>
  <h3>@Html.ActionLink("Log in", "Login", "Account")</h3>
}
