@{
  Layout = "_Layout";
}
@model Library.Models.Reservation
<h2>New Reservation</h2>
<hr>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Author)
    @Html.DropDownList("AuthorId")
    <br>
    @Html.LabelFor(model => model.Book)
    @Html.DropDownList("BookId")
    
    <br>
    @Html.LabelFor(model => model.DateTime, "Date & Time")
    @Html.EditorFor(model => model.DateTime, new { htmlAttributes = new {@class = "form-control multi-line textBox"}})
    <br>
    <button class="btn btn-success" type="submit" value="Submit!" class="btn btn-default">Submit</button>
}

<hr />
<h4>@Html.ActionLink("Reservations Overview", "Index")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>